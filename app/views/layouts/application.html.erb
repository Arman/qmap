<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= yield :head %> 
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <div id="notice">
          <% if !notice.nil? %>
            <p class="notice"><%= notice %></p>
          <% end %>
        </div>
        
        <% flash.each do |key, value| %>
          <div id="flash <%= key %>" class="flash <%= key %>"><%= value %></div>
        <% end %>
        
        <div id="alert">
          <% if !alert.nil? %>
            <p class="alert"><%= alert %></p>
          <% end %>
        </div>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= yield :scripts %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
