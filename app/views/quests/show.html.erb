<h1><%= @quest.name %></h1>
<br/>Created by  <%= @quest.created_by.email %> on <%= @quest.created_at.to_date %> at <%= @quest.created_at.strftime('%H:%M:%S') %>
<br/><%= @quest.description %>
<br/><%= @quest.address %>
<br/><%= @quest.cash_reward_amount %>
<br/><%= @quest.point_reward_amount %>
<br/><%= @quest.special_reward_description %>

<h3>Apply for this quest:</h3>
<%= form_for([@quest, @quest.assignments.build]) do |f| %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
<br/><%= link_to 'Edit', edit_quest_path(@quest) %>
<br/><%= link_to 'Remove', @quest, :confirm => 'Are you sure?', :method => :delete %>
<br/><%= link_to 'Show All Quests', quests_path %>
