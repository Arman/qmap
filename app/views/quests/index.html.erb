<h1>Listing quests</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @quests.each do |quest| %>
  <tr>
    <td><%= quest.name  %></td>
    <td><%= quest.description %></td>
    <td><%= link_to 'Show', quest %></td>
    <td><%= link_to 'Edit', edit_quest_path(@quest) %></td>
    <td><%= link_to 'Remove', @quest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
